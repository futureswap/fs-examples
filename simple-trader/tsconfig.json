{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "src/**/*",
    "typechain-types/**/*"
  ]
}
